public class Camera{
	private float x, y;
	
	public Camera (float x, float y){
		this.setX(x);
		this.setY(y);
	}

	public void tick(GameObject player){
		x = -player.getX() + 380;
		y = -player.getY() + 250;
	}
	
	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public float getY() {
		return y;
	}

	public void setY(float y) {
		this.y = y;
	}
	
}
